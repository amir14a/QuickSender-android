<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layoutDirection">ltr</item>
    </style>
    <style name="SettingDialog" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:windowAnimationStyle">@style/SettingDialogAnimation</item>
    </style>

    <style name="SettingDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_to_open</item>
        <item name="android:windowExitAnimation">@anim/anim_to_close</item>
    </style>    <style name="AboutDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_to_open_about</item>
        <item name="android:windowExitAnimation">@anim/anim_to_close_about</item>
    </style>

</resources>
